# If in a terminal
if [ -t 0 ]; then
  # Disable messsages from other users
  mesg n

  alias ls='ls --color=auto'
  alias ll='ls -alF'
  alias la='ls -A'
  alias l='ls -CF'

  alias grep='grep --color=auto'

  alias gaa='git add .'
  alias gcm='git commit -m'
  alias gc='git commit'
  alias gs='git status'
  alias gl='git log'
  alias gph='git push'
  alias gpu='git pull'

  alias hxc='hx "$HOME/dotfiles/.config/" && "$HOME/dotfiles/link"'

  alias dev='tmux_develop'
  alias ses='tmux_fzf_sessions'

  . ~/.config/shell/scripts

  # If colors
  # if [ `tput colors` -ge 8 ]; then
  # fi
fi

